<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
     http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  
<persistence-unit name="tgp">
    
              <class>com.br.tgp.entidades.Arma</class>
              <class>com.br.tgp.entidades.Armadura</class>
              <class>com.br.tgp.entidades.Arma</class>
              <class>com.br.tgp.entidades.Aventura</class>
              <class>com.br.tgp.entidades.Batalha</class>
              <class>com.br.tgp.entidades.Classe</class>
              <class>com.br.tgp.entidades.Estado</class>
              <class>com.br.tgp.entidades.Estado</class>
              <class>com.br.tgp.entidades.Estado_Personagem</class>
              <class>com.br.tgp.entidades.Level</class>
              <class>com.br.tgp.entidades.Mundo</class>
              <class>com.br.tgp.entidades.Noplayablechar</class>
              <class>com.br.tgp.entidades.Perfil</class>
              <class>com.br.tgp.entidades.Pericia</class>
              <class>com.br.tgp.entidades.Personagem</class>
              <class>com.br.tgp.entidades.Raca</class>
              <class>com.br.tgp.entidades.Tesouro</class>
<properties>
  <!-- dados da conexao -->
   <property name="javax.persistence.jdbc.driver" 
       value="com.mysql.jdbc.Driver" />
  <property name="javax.persistence.jdbc.url" 
      value="jdbc:mysql://localhost/tgp" />
  <property name="javax.persistence.jdbc.user" 
      value="root" />
  <property name="javax.persistence.jdbc.password" 
      value="" />

   <!--  propriedades do hibernate -->
   <property name="hibernate.dialect" 
      value="org.hibernate.dialect.MySQL5InnoDBDialect" />
  <property name="hibernate.show_sql" value="false" />
  <property name="hibernate.format_sql" value="true" />

  <!--  atualiza o banco, gera as tabelas se for preciso -->
  <property name="hibernate.hbm2ddl.auto" value="update" />
    
   </properties>
  </persistence-unit>
</persistence>
